{
    "name": "shalior/filament-persian-date-field",
    "description": "A FilamentPhp form field to pick persian dates",
    "keywords": [
        "shalior",
        "laravel",
        "filament-persian-date-field"
    ],
    "homepage": "https://github.com/shalior/filament-persian-date-field",
    "license": "MIT",
    "authors": [
        {
            "name": "Shalior",
            "email": "contact@shalior.ir",
            "role": "Developer"
        }
    ],
    "require": {
        "php": "^8.0",
        "spatie/laravel-package-tools": "^1.9.2",
        "filament/forms": "^2.0",
        "filament/tables": "^2.0",
        "illuminate/contracts": "^8.6|^9.0|^10.0"
    },
    "require-dev": {
        "nunomaduro/collision": "^6.0",
        "orchestra/testbench": "^7.0",
        "pestphp/pest": "^1.21",
        "pestphp/pest-plugin-laravel": "^1.1",
        "phpunit/phpunit": "^9.5"
    },
    "autoload": {
        "psr-4": {
            "Shalior\\FilamentPersianDateField\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Shalior\\FilamentPersianDateField\\Tests\\": "tests"
        }
    },
    "scripts": {
        "test": "vendor/bin/pest",
        "test-coverage": "vendor/bin/pest --coverage"
    },
    "config": {
        "sort-packages": true,
        "allow-plugins": {
            "pestphp/pest-plugin": true
        }
    },
    "extra": {
        "laravel": {
            "providers": [
                "Shalior\\FilamentPersianDateField\\FilamentPersianDateFieldServiceProvider"
            ],
            "aliases": {
                "FilamentPersianDateField": "Shalior\\FilamentPersianDateField\\Facades\\FilamentPersianDateField"
            }
        }
    },
    "minimum-stability": "dev",
    "prefer-stable": true
}
